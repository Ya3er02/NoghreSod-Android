<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default configuration for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Zarinpal Payment Gateway Configuration -->
    <!-- 
    Get pins from:
    openssl s_client -connect api.zarinpal.com:443 -showcerts
    Then for each certificate:
    openssl x509 -noout -pubkey | openssl pkey -pubin -outform DER | openssl dgst -sha256 -binary | base64
    -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.zarinpal.com</domain>
        <domain includeSubdomains="true">payment.zarinpal.com</domain>
        <domain includeSubdomains="true">zarinpal.com</domain>
        
        <!-- Certificate pins for Zarinpal -->
        <pin-set expiration="2026-12-31">
            <!-- Public key pin for primary certificate -->
            <!-- PLACEHOLDER: Replace with actual pin from certificate -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            
            <!-- Backup pin for certificate renewal -->
            <!-- PLACEHOLDER: Replace with actual backup pin -->
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Debug/Development Configuration -->
    <!-- 
    IMPORTANT: Only use in debug builds!
    Remove for production releases.
    -->
    <debug-overrides>
        <trust-anchors>
            <!-- Allow user-installed CA certificates for debugging -->
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
        
        <!-- Allow cleartext traffic only for local testing -->
        <domain-config cleartextTrafficPermitted="true">
            <domain includeSubdomains="true">localhost</domain>
            <domain includeSubdomains="true">127.0.0.1</domain>
            <domain includeSubdomains="true">192.168.1.0</domain>
        </domain-config>
    </debug-overrides>
</network-security-config>
