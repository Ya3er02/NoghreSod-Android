<?xml version="1.0" encoding="utf-8"?>
<network-security-config
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cleartext traffic is not allowed except for localhost -->
    <domain-config cleartextTrafficAllowed="false">
        <domain includeSubdomains="true">api.noghre.sod</domain>
        <domain includeSubdomains="true">cdn.noghre.sod</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>

    <!-- Allow cleartext only for localhost debug builds -->
    <domain-config cleartextTrafficAllowed="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- Certificate pinning for production (optional) -->
    <!-- Uncomment and update with actual certificates -->
