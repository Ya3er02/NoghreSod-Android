<?xml version="1.0" encoding="utf-8"?>
<!-- Network Security Configuration
     Ensures all network traffic is encrypted and secure
     Last updated: 2025-12-25
-->
<network-security-config>
    <!-- Production Configuration (api.noghresod.ir) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.noghresod.ir</domain>
        
        <!-- Certificate Pinning - Primary & Backup Pins -->
        <pin-set expiration="2026-12-31">
            <!-- Primary Certificate Pin (Current) -->
            <!-- Extract with: openssl s_client -servername api.noghresod.ir -connect api.noghresod.ir:443 | openssl x509 -pubkey -noout | openssl pkey -pubin -outform der | openssl dgst -sha256 -binary | base64 -->
            <pin digest="SHA-256">sha256/AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            
            <!-- Backup Certificate Pin (For Certificate Rotation) -->
            <pin digest="SHA-256">sha256/BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
        
        <!-- Trust Only System Certificates in Production -->
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Staging Configuration (staging-api.noghresod.ir) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">staging-api.noghresod.ir</domain>
        
        <!-- Looser pinning for staging (certificate changes frequently) -->
        <pin-set expiration="2026-12-31">
            <pin digest="SHA-256">sha256/CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC=</pin>
        </pin-set>
        
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Development Configuration (dev-api.noghresod.ir) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">dev-api.noghresod.ir</domain>
        
        <!-- No pinning for dev (certificate changes during development) -->
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" /> <!-- Allow user certificates for debugging -->
        </trust-anchors>
    </domain-config>
    
    <!-- Debug Overrides (Only for Debug Builds) -->
    <!-- Configured in build.gradle.kts via debugNetworkSecurityConfig -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" /> <!-- Allow self-signed certificates for debugging -->
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
    
    <!-- Global Configuration -->
    <!-- Block cleartext traffic everywhere by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
