<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default configuration for all domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.noghresod.com</domain>
        <domain includeSubdomains="true">noghresod.com</domain>
        
        <!-- Certificate pinning for API endpoint -->
        <pin-set expiration="2026-12-31">
            <!-- Pin your certificate here -->
            <!-- Get certificate SHA-256: openssl x509 -in cert.pem -pubkey -noout | openssl pkey -pubin -outform DER | openssl dgst -sha256 -binary | openssl enc -base64 -->
            <!-- Example: <pin digest="SHA-256">BASE64_ENCODED_SHA256</pin> -->
        </pin-set>
        
        <!-- Enforce TLS 1.2+ -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Debug configuration (only for DEBUG builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="@raw/debug_cert"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>