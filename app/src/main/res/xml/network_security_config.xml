<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.noghresod.ir</domain>
        <domain includeSubdomains="true">api.noghresod.com</domain>
        
        <!-- Certificate Pinning for security -->
        <pin-set expiration="2026-12-31">
            <!-- Public key pins for SSL/TLS certificates -->
            <!-- These are SHA-256 hashes of the public key (SubjectPublicKeyInfo) -->
            <!-- Replace with actual certificate hashes from your production servers -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <!-- Backup pin for certificate rotation -->
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
        
        <!-- Trust only system certificates (no user-installed certs) -->
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Staging environment configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api-staging.noghresod.ir</domain>
        
        <pin-set expiration="2026-12-31">
            <pin digest="SHA-256">CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC=</pin>
            <pin digest="SHA-256">DDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDD=</pin>
        </pin-set>
        
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Development/Debug configuration (only used with debuggable flag) -->
    <debug-overrides>
        <!-- Allow cleartext traffic for local development only -->
        <domain-config cleartextTrafficPermitted="true">
            <domain includeSubdomains="true">localhost</domain>
            <domain includeSubdomains="true">127.0.0.1</domain>
            <domain includeSubdomains="true">10.0.2.2</domain>
            <domain includeSubdomains="true">192.168.1.0/24</domain>
            <domain includeSubdomains="true">api-dev.noghresod.ir</domain>
        </domain-config>
        
        <!-- Trust user-installed certificates for debugging (e.g., Fiddler, Charles) -->
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
