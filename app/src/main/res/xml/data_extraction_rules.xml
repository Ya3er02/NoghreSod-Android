<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- 
    Data extraction rules determine what data the OS automatically backs up
    to Google Cloud (Android 12+)
    
    Reference: https://developer.android.com/guide/topics/data/autobackup
    -->
    
    <cloud-backup>
        <!-- EXCLUDE: Sensitive data that should NOT be backed up -->
        <exclude domain="sharedpref" path="encrypted_prefs.xml"/>
        <exclude domain="sharedpref" path="user_credentials.xml"/>
        <exclude domain="database" path="noghresod.db"/>
        <exclude domain="file" path="sensitive_files/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- ALLOW: Data that can be transferred between devices -->
        <include domain="sharedpref" path="app_preferences.xml"/>
        <include domain="sharedpref" path="ui_settings.xml"/>
    </device-transfer>
</data-extraction-rules>
