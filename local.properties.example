# This is an example file. Copy this to local.properties and add your actual values.
# DO NOT commit local.properties to git!
# local.properties contains sensitive information like API keys and URLs

# API Configuration
api.base.url.debug=https://api-dev.noghresod.ir/api/
api.base.url.staging=https://api-staging.noghresod.ir/api/
api.base.url.release=https://api.noghresod.ir/api/

# API Keys
api.key.debug=dev-secret-key-here
api.key.staging=staging-secret-key-here
api.key.release=production-secret-key-here

# Timeouts (in seconds)
api.timeout.connect=30
api.timeout.read=30
api.timeout.write=30

# Logging
debug.logging=true

# Environment
environment=development
