# Local Configuration Template
# Copy this to local.properties and fill in your values
# NEVER commit local.properties to Git (it's in .gitignore)

# SDK Configuration
sdk.dir=/path/to/android/sdk

# API Configuration
api.key=your_secret_api_key_here
api.base_url=https://api.noghresod.com/api/

# Payment Gateway Keys
payment.gateway.key=your_payment_key
payment.gateway.secret=your_payment_secret

# Firebase Configuration
firebase.database_url=https://your-project.firebaseio.com

# Feature Flags
enable.debug.logging=false
enable.crash.reporting=true
enable.analytics=true

# Security
enableProguard=true
enableNativeDebugging=false